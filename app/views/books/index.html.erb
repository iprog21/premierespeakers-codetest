<div class="pusher">
  <div class="ui inverted vertical masthead center aligned segment">

    

    <div class="ui text container">
      <h1 class="ui inverted header">
        Books
      </h1>
      <!-- <h2>Do whatever you want when you want to.</h2> -->
      <%= link_to root_path do %>
        <div class="ui huge  button"><i class="left arrow icon"></i> Back to Homepage </div>
      <% end %>
      <%= link_to new_book_path do %>
        <div class="ui huge primary button">Add new Product <i class="right arrow icon"></i></div>
      <% end %>

      <p id="notice"><%= notice %></p>
    </div>
  </div>
<div class="row grid">
  <div class="column">
    <table class="ui celled table compact" >
      <thead>
        <tr>
          <th>
            
          </th>
          <th>Isbn</th>
          <th>Title</th>
          <!-- <th>Subtitle</th> -->
          <th>Publishing status</th>
          <th>Language</th>
          <th>Publisher name</th>
          <th>Author</th>
          <th>Number of pages</th>
          <th>Publication date</th>
          <th>Product form</th>
          <th>Price</th>
          <!-- <th>Height</th>
          <th>Length</th>
          <th>Width</th>
          <th>Weight</th>
          <th>Bisac code</th>
          <th>Bisac code2</th>
          <th>Bisac code3</th> -->
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= image_tag book.media_file.nil? ? 'no-image' : book.media_file, class: "ui small bordered rounded image" %>
            </td>
            <td><%= book.isbn %></td>
            <td><%= book.title %></td>
            <!-- <td><%= book.subtitle %></td> -->
            <td><%= book.publishing_status %></td>
            <td><%= book.language %></td>
            <td><%= book.publisher_name %></td>
            <td><%= book.author %></td>
            <td><%= book.number_of_pages %></td>
            <td><%= book.publication_date %></td>
            <td><%= book.product_form %></td>
            <td><%= book.price %></td>
            <!-- <td><%= book.height %></td>
            <td><%= book.length %></td>
            <td><%= book.width %></td>
            <td><%= book.weight %></td>
            <td><%= book.bisac_code %></td>
            <td><%= book.bisac_code2 %></td>
            <td><%= book.bisac_code3 %></td> -->
        
            <td><%= link_to 'Show', book, class: 'ui button small blue' %></td>
            <td><%= link_to 'Edit', edit_book_path(book), class: 'ui button small green' %></td>
            <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'red ui button small' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
   
  </div>
</div>
